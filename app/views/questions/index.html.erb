<div class="container" style="heght: 100vh; width:80vw;">
  <section class="questions" style="margin-top: 10%;">
    <h1 style="font-weight: bold">質問一覧</h1>
      <div class="questions_list" style="display: flex margin-top: 5%;">
        <% @questions.each do |question| %>
          <div class="questions_list_question" style="border: solid 2px #000;">
            <h2><%= question.title %></h2>
            <a href="<%= question.url %>" class="question_url"><%= question.url %></a>
          </div>
        <% end %>
      </div>

<% if false %>
          <%= form_for Answer.new, url: question_answers_path(question.id) do |f| %>

            <%= f.text_field :content, class: "form-control" %>
            <br>
            <%= f.submit '回答する', class: 'btn btn-primary col-xs-offset-1 col-xs-2' %>
          <% end %>

          <% question.answers.each do |answer| %>
           <%= answer.content %>
          <% end %>

          </div>



    <%= link_to '質問作成', new_question_path %>
<% end %>

  </section>
</div>
