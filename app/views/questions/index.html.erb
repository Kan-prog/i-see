<h1>質問一覧</h1>

  <div class="col-xs-8">
    <% @questions.each do |question| %>
      <div class="questions">
        <div class="question-left col-xs-8">
          <div class="question_title">
            <%= question.title %>
          </div>
          
          <div class="question_content">
            <%= question.content %>
          </div>  
          
          <div class="question_url">
            <a href="<%= question.url %>" class="question_url"><%= question.url %></a>
          </div>
        </div>  
        
      
      <%= form_for Answer.new, url: question_answers_path(question.id) do |f| %>
      
        <%= f.text_field :content, class: "form-control" %>
        <br>
        <%= f.submit '回答する', class: 'btn btn-primary col-xs-offset-1 col-xs-2' %>
      <% end %>
      
      <% question.answers.each do |answer| %>
       <%= answer.content %>
      <% end %>
      
      </div>
    <% end %>  
  </div>
  
  <div class="col-xs-4">
    
  </div>
    
    

<br>

<%= link_to '質問作成', new_question_path %>
